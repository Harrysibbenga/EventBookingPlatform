---
/**
 * Footer component with business information, links, and social media.
 * Responsive design with newsletter signup and contact information.
 */

 import { BUSINESS_INFO, SEO_CONFIG } from '../../utils/constants'

const currentYear = new Date().getFullYear()

const quickLinks = [
  { name: 'Home', href: '/' },
  { name: 'Services', href: '/#services' },
  { name: 'Why Us', href: '/#why' },
  { name: 'Gallery', href: '/#gallery' },
  { name: 'Contact', href: '/#contact' }
]

const legalLinks = [
  { name: 'Privacy Policy', href: '/privacy' },
  { name: 'Terms of Service', href: '/terms' },
  { name: 'Cookie Policy', href: '/cookies' },
  { name: 'Accessibility', href: '/accessibility' }
]

const serviceAreas = BUSINESS_INFO.serviceAreas.slice(0, 3) // Show first 3 areas
const image = SEO_CONFIG.image
---

