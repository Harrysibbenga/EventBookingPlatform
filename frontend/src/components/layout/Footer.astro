  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
<div class="space-y-6">
  <div>
    <a href="/" class="group logo-tilt flex items-center space-x-4 mb-4">
      <!-- Prominent logo badge -->
      <div 
    class="w-16 h-16 rounded px-1 bg-gradient-to-br from-primary-500 to-primary-600
           flex items-center justify-center shadow-md group-hover:shadow-lg 
           transition-transform duration-300 hover:rotate-3 hover:scale-105"
  >
    <img 
      src={image} 
      alt={`${BUSINESS_INFO.name} logo`} 
      class="w-12 h-12 object-contain" 
      loading="lazy" 
    />
  </div>

      <!-- Brand name + tagline -->
      <div>
        <h3 class="text-2xl font-extrabold leading-tight">
          <span class="bg-gold-gradient bg-clip-text text-transparent">{BUSINESS_INFO.name}</span>
        </h3>
        <p class="text-neutral-400 text-sm">{BUSINESS_INFO.tagline}</p>
      </div>
    </a>

    <p class="text-neutral-300 text-sm leading-relaxed">
      {BUSINESS_INFO.description}
    </p>
  </div>

  <!-- Social Media Links -->
