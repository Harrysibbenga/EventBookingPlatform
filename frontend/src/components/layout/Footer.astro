  </div>
</div>


      <!-- Quick Links -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-6 hover:text-brand-gold transition-colors">
          Quick Links
        </h4>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-neutral-300 hover:text-white transition-colors text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Information -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-6">
          Contact Info
        </h4>
        <div class="space-y-4">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <div class="text-sm text-neutral-300">
              <p>{BUSINESS_INFO.address.street}</p>
              <p>{BUSINESS_INFO.address.city}, {BUSINESS_INFO.address.state} {BUSINESS_INFO.address.zip}</p>
            </div>
          </div>

          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a 
              href={`tel:${BUSINESS_INFO.phone}`}
              class="text-sm text-neutral-300 hover:text-white transition-colors"
            >
              {BUSINESS_INFO.phone}
            </a>
          </div>

          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a 
              href={`mailto:${BUSINESS_INFO.email}`}
              class="text-sm text-neutral-300 hover:text-white transition-colors"
            >
              {BUSINESS_INFO.email}
            </a>
          </div>
        </div>

        <!-- Business Hours -->
        <div class="mt-6">
          <h5 class="text-xs font-semibold text-neutral-400 uppercase tracking-wider mb-3">
            Business Hours
          </h5>
          <div class="text-sm text-neutral-300 space-y-1">
            <div class="flex justify-between">
              <span>Mon - Fri</span>
              <span>9:00 AM - 6:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Saturday</span>
              <span>10:00 AM - 4:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Sunday</span>
              <span>By Appointment</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Newsletter Signup -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-6">
          Stay Updated
        </h4>
        <p class="text-neutral-300 text-sm mb-4">
          Get event planning tips and exclusive offers delivered to your inbox.
        </p>
        
        <form class="space-y-3" action="#" method="post">
          <div>
            <label for="email-newsletter" class="sr-only">Email address</label>
            <input
              id="email-newsletter"
              name="email"
              type="email"
              required
              placeholder="Enter your email"
              class="w-full px-3 py-2 bg-neutral-800 border border-neutral-700 rounded-md text-white placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
            />
          </div>
          <button
            type="submit"
            class="w-full bg-gradient-to-r from-brand-gold to-yellow-500 
                  bg-gold-gradient text-brand-black font-semibold px-4 py-2 rounded-md shadow-md
                  hover:from-yellow-400 hover:to-brand-gold 
                  hover:shadow-lg transition transform hover:-translate-y-0.5
                  focus:outline-none focus:ring-2 focus:ring-brand-gold focus:ring-offset-2 focus:ring-offset-neutral-900"
          >
            Subscribe
          </button>
        </form>

        <!-- Service Areas -->
        <div class="mt-6">
          <h5 class="text-xs font-semibold text-neutral-400 uppercase tracking-wider mb-3">
            Service Areas
          </h5>
          <ul class="text-sm text-neutral-300 space-y-1">
            {serviceAreas.map((area) => (
              <li>{area}</li>
            ))}
            <li>
              <a href="/service-areas" class="text-primary-400 hover:text-primary-300 transition-colors">
                + More areas
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Footer -->
  <div class="border-t border-neutral-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="md:flex md:items-center md:justify-between">
        <div class="flex flex-col md:flex-row md:items-center md:space-x-6 space-y-4 md:space-y-0">
          <p class="text-neutral-400 text-sm">
            Â© {currentYear} {BUSINESS_INFO.name}. All rights reserved.
          </p>
          
          <!-- Legal Links -->
          <nav class="flex flex-wrap items-center space-x-4">
            {legalLinks.map((link, index) => (
              <Fragment>
                <a 
                  href={link.href}
                  class="text-neutral-400 hover:text-white transition-colors text-sm"
                >
                  {link.name}
                </a>
                {index < legalLinks.length - 1 && (
                  <span class="text-neutral-600">|</span>
                )}
              </Fragment>
            ))}
          </nav>
        </div>

        <!-- Certifications/Awards -->
        <div class="flex items-center space-x-4 mt-4 md:mt-0">
          <div class="flex items-center space-x-2 text-neutral-400 text-sm">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            <span>Licensed & Insured</span>
          </div>
          
          <div class="flex items-center space-x-2 text-neutral-400 text-sm">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>BBB Accredited</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Back to Top Button -->
  <button
    id="back-to-top"
    class="fixed bottom-8 right-8 bg-gold-gradient text-brand-black p-3 rounded-full shadow-gold-strong
          opacity-0 pointer-events-none transition-all duration-300 z-40 hover:shadow-gold-glow"
    aria-label="Back to top"
  >

    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
    </svg>
  </button>
</footer>

<style>
  /* Newsletter form focus states */
  #email-newsletter:focus {
    box-shadow: 0 0 0 2px rgba(242, 128, 11, 0.5);
  }
  
  /* Social media icon hover effects */
  .social-link:hover {
    transform: translateY(-2px);
  }
  
  /* Back to top button animation */
  #back-to-top.show {
    opacity: 1;
    pointer-events: auto;
    transform: scale(1);
  }
  
  #back-to-top:hover {
    transform: scale(1.1);
  }
  
  /* Footer section spacing */
  .footer-section {
    margin-bottom: 2rem;
  }
  
  @media (min-width: 768px) {
    .footer-section {
      margin-bottom: 0;
    }
  }
  
  /* Link hover animations */
  .footer-link {
    position: relative;
    transition: color 0.2s ease;
  }
  
  .footer-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: currentColor;
    transition: width 0.2s ease;
  }
  
  .footer-link:hover::after {
    width: 100%;
  }
  
  /* Accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    .social-link:hover,
    #back-to-top:hover {
      transform: none;
    }
    
    .footer-link::after {
      transition: none;
    }
  }
  
  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .footer-link {
      text-decoration: underline;
    }
  }

  /* Logo tilt like the nav */
.logo-tilt .logo-wrap {
  transform: rotate(0deg) scale(1);
}
.logo-tilt:hover .logo-wrap {
  transform: rotate(4deg) scale(1.06);
}

/* Gold gradient utility if not already present */
.bg-gold-gradient {
  background-image: linear-gradient(135deg, #B8860B 0%, #D4AF37 40%, #F5D879 60%, #B8860B 100%);
}

</style>

<script>
  // Newsletter form submission
  document.addEventListener('DOMContentLoaded', () => {
    const newsletterForm = document.querySelector('form[action="#"]')
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', async (e) => {
        e.preventDefault()
        
        const emailInput = newsletterForm.querySelector('input[name="email"]') as HTMLInputElement
        const submitButton = newsletterForm.querySelector('button[type="submit"]') as HTMLButtonElement
        
        if (!emailInput.value) return
        
        // Disable form during submission
        submitButton.disabled = true
        submitButton.textContent = 'Subscribing...'
        
        try {
          // Here you would typically send to your newsletter service
          // For now, we'll simulate a successful subscription
          await new Promise(resolve => setTimeout(resolve, 1000))
          
          // Show success message
          emailInput.value = ''
          submitButton.textContent = 'Subscribed!'
          submitButton.style.backgroundColor = '#10b981'
          
          // Reset button after 3 seconds
          setTimeout(() => {
            submitButton.disabled = false
            submitButton.textContent = 'Subscribe'
            submitButton.style.backgroundColor = ''
          }, 3000)
          
        } catch (error) {
          console.error('Newsletter subscription failed:', error)
          submitButton.textContent = 'Try Again'
          submitButton.disabled = false
        }
      })
    }
    
    // Back to top button functionality
    const backToTopButton = document.getElementById('back-to-top')
    if (backToTopButton) {
      // Show/hide button based on scroll position
      window.addEventListener('scroll', () => {
        if (window.pageYOffset > 300) {
          backToTopButton.classList.add('show')
        } else {
          backToTopButton.classList.remove('show')
        }
      })
      
      // Smooth scroll to top
      backToTopButton.addEventListener('click', () => {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        })
      })
    }
    
    // Track footer link clicks for analytics
    const footerLinks = document.querySelectorAll('footer a')
    footerLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        const linkText = link.textContent?.trim()
        const linkHref = link.getAttribute('href')
        
        // Send analytics event (if analytics is available)
        if (typeof gtag === 'function') {
          gtag('event', 'footer_link_click', {
            'link_text': linkText,
            'link_url': linkHref,
            'event_category': 'footer'
          })
        }
      })
    })
    
    // Social media link tracking
    const socialLinks = document.querySelectorAll('a[href*="instagram"], a[href*="facebook"], a[href*="twitter"], a[href*="linkedin"]')
    socialLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        const platform = link.getAttribute('href')?.includes('instagram') ? 'instagram' :
                         link.getAttribute('href')?.includes('facebook') ? 'facebook' :
                         link.getAttribute('href')?.includes('twitter') ? 'twitter' :
                         link.getAttribute('href')?.includes('linkedin') ? 'linkedin' : 'unknown'
        
        if (typeof gtag === 'function') {
          gtag('event', 'social_click', {
            'social_platform': platform,
            'event_category': 'social_media'
          })
        }
      })
    })
  })
</script>