---
/**
 * Hero section with cream-based design matching the Roman Events logo.
 * Uses the warm cream background as primary with orange and balloon accents.
 */

import { BUSINESS_INFO } from '../../utils/constants'
import Balloon from '../decor/Balloon.astro'
import { Calendar, Star, Users, Award } from 'lucide-vue-next'
---

<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden isolate">
  <!-- Background -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-black-gradient" />
    <!-- optional texture image (subtle) -->
    <img
      src="https://images.unsplash.com/photo-1519167758481-83f29da78e92?auto=format&fit=crop&w=2000&q=70"
      alt=""
      class="absolute inset-0 w-full h-full object-cover opacity-20 mix-blend-overlay"
      loading="eager"
      decoding="async"
    />
    <!-- vignette -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-transparent to-black/60" />
    <!-- soft gold wash -->
    <div class="absolute -top-24 left-1/3 h-80 w-80 rounded-full bg-brand-gold/10 blur-3xl" />
  </div>

  <!-- Gold Balloons Field (background) -->
<div aria-hidden="true" class="pointer-events-none absolute inset-0 -z-10 overflow-hidden">
    <!-- Balloon 1 -->
    <Balloon
    preset="gold"
    top="12%"
    left="8%"
    width={80}          
    opacity={0.6}
    duration={9}
    delay={0.2}
    zIndex="z-0" 
    />

    <!-- Balloon 2 -->
    <Balloon
    preset="gold"
    top="22%"
    right="12%"
    width={64}           
    opacity={0.55}
    duration={10.5}
    delay={1}
    zIndex="z-0" 
    />

    <!-- Balloon 3 -->
    <Balloon
    preset="gold"
    top="58%"
    left="24%"
    width={56}           
    opacity={0.5}
    duration={8.8}
    delay={1.6}
    zIndex="z-0" 
    />

    <!-- Balloon 4 (blurred for depth) -->
    <Balloon
    preset="gold"
    top="72%"
    right="26%"
    width={96}           
    opacity={0.35}
    duration={12}
    delay={0.6}
    zIndex="z-0" 
    blur
    />

    <Balloon class="z-0" preset="gold"   top="56%"  right="2%"  width={80}  opacity={0.35} delay={0.9} />
    <Balloon class="z-0" preset="gold" bottom="10%" left="22%" width={128} opacity={0.35} delay={0.3} blur />
    <Balloon class="z-0" preset="gold"    bottom="24%" left="2%"  width={72}  opacity={0.35} delay={1.1} />
    

</div>


  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full text-center pt-28 sm:pt-0">
    <div class="space-y-6 animate-on-scroll opacity-0 translate-y-6">
      <p class="inline-flex items-center justify-center gap-2 rounded-full border border-brand-gold/30 bg-white/5 px-3 py-1 text-xs font-medium tracking-wide text-brand-gold shadow-gold-glow">
        Premium Event Styling in Milton Keynes & Beyond
      </p>

      <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-extrabold leading-tight text-brand-gold">
        <span class="block">LED Letters, Numbers</span>
        <span class="block bg-gold-gradient bg-clip-text text-transparent shimmer">
          & Event Styling
        </span>
        <span class="block text-brand-gold/90">Milton Keynes</span>
      </h1>

      <p class="mx-auto max-w-3xl text-neutral-200/80 text-lg sm:text-xl leading-relaxed">
        Serving Milton Keynes, Bedford, Northampton & beyond — we make your celebration unforgettable with LED letters, bespoke décor, and event styling for weddings, parties, and special occasions.
      </p>      

      <!-- CTAs -->
      <div class="mt-6 flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="/booking"
          class="group inline-flex items-center justify-center gap-2 rounded-xl px-7 py-4 font-semibold text-brand-black
                 bg-gold-gradient shadow-gold-strong transition-all duration-300 hover:shadow-gold-glow hover:-translate-y-0.5 focus:outline-none focus:ring-4 focus:ring-brand-gold/30"
        >
          <Calendar class="w-5 h-5 transition-transform group-hover:rotate-12" />
          Book Your Event
          <span class="ml-1 transition-transform group-hover:translate-x-1">→</span>
        </a>

        <a
          href="#gallery"
          class="group inline-flex items-center justify-center gap-2 rounded-xl px-7 py-4 font-semibold
                 border border-brand-gold/30 bg-white/5 text-brand-gold/90 backdrop-blur-xs
                 transition-all duration-300 hover:bg-white/10 hover:shadow-gold-glow hover:-translate-y-0.5 focus:outline-none focus:ring-4 focus:ring-brand-gold/30"
        >
          <Star class="w-5 h-5 transition-transform group-hover:rotate-12" />
          View Our Work
        </a>
      </div>
    </div>

    <!-- Metrics -->
    <div class="mt-16 grid grid-cols-2 lg:grid-cols-4 gap-5 max-w-4xl mx-auto animate-on-scroll opacity-0 translate-y-6 delay-150">
      <div class="rounded-2xl border border-white/10 bg-white/5 backdrop-blur-xs p-5">
        <div class="text-3xl lg:text-4xl font-bold text-brand-gold">200+</div>
        <div class="mt-1 text-neutral-200/70">Events Decorated</div>
      </div>
      <div class="rounded-2xl border border-white/10 bg-white/5 backdrop-blur-xs p-5">
        <div class="text-3xl lg:text-4xl font-bold text-brand-gold">5+</div>
        <div class="mt-1 text-neutral-200/70">Years Experience</div>
      </div>
      <div class="rounded-2xl border border-white/10 bg-white/5 backdrop-blur-xs p-5">
        <div class="text-3xl lg:text-4xl font-bold text-brand-gold">50+</div>
        <div class="mt-1 text-neutral-200/70">LED Numbers & Letters</div>
      </div>
      <div class="rounded-2xl border border-white/10 bg-white/5 backdrop-blur-xs p-5">
        <div class="text-3xl lg:text-4xl font-bold text-brand-gold">24hr</div>
        <div class="mt-1 text-neutral-200/70">Hire Period</div>
      </div>
    </div>
  </div>

  <!-- Scroll cue -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 text-center text-neutral-300/70">
    <div class="mx-auto w-6 h-10 rounded-full border-2 border-neutral-300/40 flex justify-center animate-bounce">
      <div class="mt-2 h-3 w-1 rounded-full bg-neutral-300/70 animate-pulse" />
    </div>
    <p class="mt-2 text-xs">Scroll to explore</p>
  </div>

  <!-- Decorative balloons (subtle) -->
  <div class="pointer-events-none absolute inset-0 -z-10">
    <div class="absolute top-[12%] left-[10%] w-24 h-24 rounded-full bg-balloons-gold/15 blur-2xl animate-float" />
    <div class="absolute top-[65%] right-[15%] w-16 h-16 rounded-full bg-balloons-purple/15 blur-xl animate-float" style="animation-delay:1.2s" />
    <div class="absolute top-[35%] right-[28%] w-20 h-20 rounded-full bg-balloons-blue/10 blur-xl animate-float" style="animation-delay:.6s" />
  </div>
</section>


<style>
  /* Balloon-specific animations */
  .balloon-hover:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 12px 30px rgba(244, 195, 84, 0.2);
  }
  
  /* Enhanced floating animation for balloons */
  @keyframes balloonFloat {
    0%, 100% { 
      transform: translateY(0px) rotate(0deg); 
    }
    25% { 
      transform: translateY(-8px) rotate(1deg); 
    }
    50% { 
      transform: translateY(-15px) rotate(0deg); 
    }
    75% { 
      transform: translateY(-8px) rotate(-1deg); 
    }
  }

  @keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
  }
  .shimmer {
    background-size: 200% 100%;
    animation: shimmer 3.8s linear infinite;
  }

/* Scroll/appear reveal (paired with animate-on-scroll class) */
.revealed { opacity: 1 !important; transform: translateY(0) !important; }
  
  /* Balloon string wiggle */
  @keyframes wiggle {
    0%, 100% { 
      transform: rotate(-2deg); 
    }
    50% { 
      transform: rotate(2deg); 
    }
  }
  
  /* Gradient text support */
  .bg-clip-text {
    -webkit-background-clip: text;
    background-clip: text;
  }
  
  /* Custom animations for hero elements */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  /* Gradient text support for older browsers */
  .bg-clip-text {
    -webkit-background-clip: text;
    background-clip: text;
  }
  
  /* Enhanced scroll indicator */
  .scroll-indicator {
    animation: scroll-pulse 2s ease-in-out infinite;
  }
  
  @keyframes scroll-pulse {
    0%, 100% {
      opacity: 0.7;
    }
    50% {
      opacity: 1;
      transform: translateY(5px);
    }
  }
  
  /* Responsive text sizing improvements */
  @media (max-width: 640px) {
    h1 {
      font-size: clamp(2rem, 8vw, 3rem);
    }
  }
  
  /* Button hover effects with new colors */
  .group:hover {
    transform: translateY(-2px);
  }
  
  /* Custom cream pattern background */
  .bg-cream-pattern {
    background-image: 
      radial-gradient(circle at 30% 30%, rgba(244, 195, 84, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 70% 60%, rgba(249, 115, 22, 0.05) 0%, transparent 50%),
      radial-gradient(circle at 20% 80%, rgba(239, 68, 68, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(59, 130, 246, 0.03) 0%, transparent 50%);
  }
  
  /* Enhanced fade in animation */
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out;
  }
  
  @keyframes fadeInUp {
    0% { 
      opacity: 0; 
      transform: translateY(30px); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
</style>

<script>
  // Parallax effect for background
  document.addEventListener('DOMContentLoaded', () => {
    
  })
  
  // Intersection Observer for animation triggers
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  }
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-fade-in-up')
      }
    })
  }, observerOptions)
  
  // Observe hero elements
  document.querySelectorAll('.animate-on-scroll').forEach(el => {
    observer.observe(el)
  })

  const io = new IntersectionObserver((entries) => {
    entries.forEach(e => { if (e.isIntersecting) e.target.classList.add('revealed') })
  }, { threshold: 0.12 });
  document.querySelectorAll('.animate-on-scroll').forEach(el => io.observe(el));
  
  // Parallax effect for floating balloons
  document.addEventListener('DOMContentLoaded', () => {
    const balloons = document.querySelectorAll('[class*="bg-balloons-"]')
    const hero = document.querySelector('.hero-bg')
    
    if (hero) {
      window.addEventListener('scroll', () => {
        const scrolled = window.pageYOffset
        const parallax = scrolled * 0.5
        hero.style.transform = `translateY(${parallax}px)`
      })
    }
    
    window.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset
      balloons.forEach((balloon, index) => {
        const speed = 0.2 + (index * 0.1)
        const yPos = -(scrolled * speed)
        balloon.style.transform = `translateY(${yPos}px)`
      })
    })
  })
</script>