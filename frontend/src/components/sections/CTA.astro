---
/**
 * Call-to-Action section for encouraging bookings and inquiries.
 * Features compelling copy, multiple action buttons, and contact information.
 */
 import { BUSINESS_INFO } from "../../utils/constants";
 import Balloon from '../decor/Balloon.astro'
---
<section
  id="contact"
  class="cta-section py-20 bg-gradient-to-br from-yellow-600 via-amber-600 to-yellow-700 relative overflow-hidden"
>
  <!-- Vibrant balloon background (subtle, behind content but above bg) -->
  <div aria-hidden="true" class="pointer-events-none absolute inset-0 z-0 overflow-hidden">
    <Balloon preset="white"   top="10%" left="6%"   width={96}  opacity={0.2} blur />
    <Balloon preset="gold"    top="24%" right="10%" width={112} opacity={0.25} delay={0.6} blur />
    <Balloon preset="amber"   top="56%" left="20%"  width={80}  opacity={0.2}  delay={0.9} />
    <Balloon preset="orange"  bottom="12%" right="22%" width={128} opacity={0.25} delay={0.3} blur />
    <Balloon preset="red"     bottom="24%" left="10%" width={72}  opacity={0.2}  delay={1.1} />
  </div>

  <!-- Background Elements -->
  <div class="absolute inset-0 opacity-10 pointer-events-none">
    <!-- Geometric shapes -->
    <div class="decorative-element absolute top-10 left-10 w-32 h-32 border border-white rounded-full animate-pulse"></div>
    <div class="decorative-element absolute bottom-20 right-20 w-24 h-24 border border-white rounded-lg rotate-45 animate-bounce"></div>
    <div class="decorative-element absolute top-1/2 left-1/4 w-16 h-16 bg-white rounded-full animate-float"></div>

    <!-- Decorative dots -->
    <div class="absolute top-1/4 right-1/3 decorative-dots">
      <div class="grid grid-cols-3 gap-2">
        {
          Array.from({ length: 9 }, (_, i) => (
            <div
              class="w-2 h-2 bg-white rounded-full opacity-50"
              style={`animation-delay: ${i * 0.1}s`}
            />
          ))
        }
      </div>
    </div>
  </div>

  <!-- Foreground Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center">
      <!-- Main Heading -->
      <div class="animate-on-scroll">
        <h2 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-white mb-6 leading-tight">
          Ready to Make Your
          <span class="block bg-gradient-to-r from-yellow-300 to-orange-300 bg-clip-text text-transparent">
            Celebration Shine?
          </span>
        </h2>

        <p class="text-xl lg:text-2xl text-primary-100 mb-12 max-w-4xl mx-auto leading-relaxed">
          Book your LED number and letter display or balloon package today and create unforgettable memories that will light up your special day.
        </p>
      </div>

      <!-- Action Buttons -->
      <div
        class="animate-on-scroll cta-buttons flex flex-col sm:flex-row gap-6 justify-center items-center mb-16"
        style="animation-delay: 0.2s;"
      >
        <a
          href="/booking"
          class="cta-button group bg-white hover:bg-neutral-50 text-primary-700 px-8 py-4 rounded-lg font-bold text-lg transition-all duration-300 hover:shadow-2xl hover:scale-105 inline-flex items-center shadow-xl"
          aria-label="Get your quote today"
        >
          <svg class="w-6 h-6 mr-3 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Get Your Quote Today
          <span class="ml-2 group-hover:translate-x-1 transition-transform">→</span>
        </a>

        <a
          href={`tel:${BUSINESS_INFO.phone}`}
          class="cta-button group bg-transparent hover:bg-white/10 text-white border-2 border-white px-8 py-4 rounded-lg font-bold text-lg transition-all duration-300 hover:shadow-xl inline-flex items-center backdrop-blur-sm"
          aria-label={`Call now ${BUSINESS_INFO.phone}`}
        >
          <svg class="w-6 h-6 mr-3 group-hover:animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Call Now: {BUSINESS_INFO.phone}
        </a>
      </div>

      <!-- Value Propositions -->
      <div class="animate-on-scroll grid grid-cols-1 md:grid-cols-3 gap-8 mb-16" style="animation-delay: 0.4s;">
        <div class="value-card text-center group transition-transform">
          <div class="icon-container w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Instant Quote</h3>
          <p class="text-primary-100 text-sm">Call or message for immediate pricing and availability check.</p>
        </div>

        <div class="value-card text-center group transition-transform">
          <div class="icon-container w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Professional Setup</h3>
          <p class="text-primary-100 text-sm">We deliver, install, and collect everything — you just enjoy your party.</p>
        </div>

        <div class="value-card text-center group transition-transform">
          <div class="icon-container w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">24 Hour Hire</h3>
          <p class="text-primary-100 text-sm">Available for longer periods upon request</p>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="animate-on-scroll bg-white/10 backdrop-blur-fallback rounded-2xl p-8 border border-white/20" style="animation-delay: 0.6s;">
        <h3 class="text-2xl font-bold text-white mb-6">Get in Touch Today</h3>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
          <!-- Phone -->
          <div class="contact-item group transition-transform">
            <div class="flex items-center justify-center mb-3">
              <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div class="text-left">
                <div class="text-white font-semibold">Call Us</div>
                <a href={`tel:${BUSINESS_INFO.phone}`} class="text-primary-100 hover:text-white transition-colors">
                  {BUSINESS_INFO.phone}
                </a>
              </div>
            </div>
          </div>

          <!-- Email -->
          <div class="contact-item group transition-transform">
            <div class="flex items-center justify-center mb-3">
              <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="text-left">
                <div class="text-white font-semibold">Email Us</div>
                <a href={`mailto:${BUSINESS_INFO.email}`} class="text-primary-100 hover:text-white transition-colors text-sm">
                  {BUSINESS_INFO.email}
                </a>
              </div>
            </div>
          </div>

          <!-- Location -->
          <div class="contact-item group transition-transform">
            <div class="flex items-center justify-center mb-3">
              <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div class="text-left">
                <div class="text-white font-semibold">Service Area</div>
                <div class="text-primary-100 text-sm">
                  {BUSINESS_INFO.address.city} &amp; Surrounding Areas
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Business Hours -->
        <div class="mt-8 pt-8 border-t border-white/20">
          <h4 class="text-lg font-semibold text-white mb-4">Service Hours</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
            <div class="flex justify-between">
              <span class="text-primary-100">Monday - Friday:</span>
              <span class="text-white font-medium">9:00 AM - 6:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span class="text-primary-100">Saturday:</span>
              <span class="text-white font-medium">8:00 AM - 8:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span class="text-primary-100">Sunday:</span>
              <span class="text-white font-medium">By Appointment Only</span>
            </div>
            <div class="flex justify-between">
              <span class="text-primary-100">Emergency Delivery:</span>
              <span class="text-white font-medium">Available</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Social Proof -->
      <div class="animate-on-scroll mt-12 text-center" style="animation-delay: 0.8s;">
        <p class="text-primary-100 mb-4">
          Join 200+ happy families who chose Roman Events for their milestone celebrations
        </p>
        <div class="flex justify-center items-center space-x-2">
          <div class="flex -space-x-2 star-rating">
            {
              Array.from({ length: 5 }, () => (
                <div class="w-8 h-8 bg-white rounded-full border-2 border-primary-600 flex items-center justify-center">
                  <span class="text-primary-600 text-xs font-bold">★</span>
                </div>
              ))
            }
          </div>
          <span class="text-white font-medium ml-4">5.0/5.0 stars from our customers</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animation classes */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease-out;
  }
  .animate-on-scroll.animate-fade-in-up {
    opacity: 1;
    transform: translateY(0);
  }

  /* Floating animation for decorative elements */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-15px); }
  }
  .animate-float { animation: float 4s ease-in-out infinite; }

  /* Button hover effects */
  .cta-primary:hover { box-shadow: 0 25px 50px rgba(255, 255, 255, 0.3); }
  .cta-secondary:hover { backdrop-filter: blur(8px); background-color: rgba(255, 255, 255, 0.15); }

  /* Gradient text support */
  .bg-clip-text { -webkit-background-clip: text; background-clip: text; }

  /* Icon animations */
  .icon-rotate:hover { transform: rotate(360deg); }
  .icon-pulse:hover { animation: pulse 1s infinite; }

  /* Value proposition cards */
  .value-card { transition: transform .3s ease; }
  .value-card:hover { transform: translateY(-5px); }
  .value-card .icon-container { transition: all 0.3s ease; }
  .value-card:hover .icon-container { transform: scale(1.1); background-color: rgba(255, 255, 255, 0.3); }

  /* Contact info hover effects */
  .contact-item { transition: transform .2s ease; }
  .contact-item:hover { transform: scale(1.05); }

  /* Backdrop blur fallback */
  .backdrop-blur-fallback { background-color: rgba(255, 255, 255, 0.1); }
  @supports (backdrop-filter: blur(8px)) {
    .backdrop-blur-fallback { background-color: transparent; backdrop-filter: blur(8px); }
  }

  /* Responsive button adjustments */
  @media (max-width: 640px) {
    .cta-buttons { flex-direction: column; gap: 1rem; }
    .cta-buttons a { width: 100%; justify-content: center; }
  }

  /* Focus states for accessibility */
  .cta-button:focus {
    outline: 2px solid rgba(255, 255, 255, 0.5);
    outline-offset: 4px;
  }

  /* Stars animation */
  .star-rating { animation: twinkle 2s ease-in-out infinite; }
  @keyframes twinkle { 0%, 100% { opacity: 1; } 50% { opacity: 0.7; } }

  /* Decorative dots animation */
  .decorative-dots div { animation: fade-pulse 2s ease-in-out infinite; }
  @keyframes fade-pulse { 0%, 100% { opacity: 0.3; } 50% { opacity: 0.8; } }
</style>

<script is:inline>
  // CTA section functionality
  document.addEventListener('DOMContentLoaded', () => {
    // Intersection observer for animations
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) entry.target.classList.add('animate-fade-in-up');
        });
      },
      { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
    );

    document.querySelectorAll('.animate-on-scroll').forEach((el) => observer.observe(el));

    // Track CTA button clicks
    const ctaButtons = document.querySelectorAll('.cta-button, a[href="/booking"], a[href^="tel:"]');
    ctaButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const btnText = (button.textContent || '').trim();
        const href = button.getAttribute('href') || '';
        const buttonType = href.includes('/booking') ? 'booking' : href.startsWith('tel:') ? 'phone' : 'other';

        if (typeof window !== 'undefined' && typeof window.gtag === 'function') {
          window.gtag('event', 'cta_click', {
            button_text: btnText,
            button_type: buttonType,
            section: 'main_cta',
            event_category: 'conversion'
          });
        }

        button.style.transform = 'scale(0.95)';
        setTimeout(() => { button.style.transform = ''; }, 150);
      });
    });

    // Phone number click tracking
    document.querySelectorAll('a[href^="tel:"]').forEach((link) => {
      link.addEventListener('click', () => {
        if (typeof window !== 'undefined' && typeof window.gtag === 'function') {
          window.gtag('event', 'phone_click', {
            event_category: 'contact',
            phone_number: link.getAttribute('href')
          });
        }
      });
    });

    // Email links tracking
    document.querySelectorAll('a[href^="mailto:"]').forEach((link) => {
      link.addEventListener('click', () => {
        if (typeof window !== 'undefined' && typeof window.gtag === 'function') {
          window.gtag('event', 'email_click', {
            event_category: 'contact',
            email_address: link.getAttribute('href')
          });
        }
      });
    });

    // Parallax effect for background elements
    const handleScroll = () => {
      const scrolled = window.pageYOffset;
      document.querySelectorAll('.decorative-element').forEach((el, index) => {
        const speed = 0.5 + index * 0.1;
        const yPos = -(scrolled * speed);
        el.setAttribute('style', `transform: translateY(${yPos}px)`);
      });
    };

    // Throttled scroll handler for performance
    let ticking = false;
    const scrollHandler = () => {
      if (!ticking) {
        requestAnimationFrame(() => {
          handleScroll();
          ticking = false;
        });
        ticking = true;
      }
    };
    window.addEventListener('scroll', scrollHandler);

    // Mouse parallax effect
    const ctaSection = document.querySelector('.cta-section');
    if (ctaSection) {
      ctaSection.addEventListener('mousemove', (e) => {
        const rect = ctaSection.getBoundingClientRect();
        const xPercent = ((e.clientX - rect.left) / rect.width - 0.5) * 2;
        const yPercent = ((e.clientY - rect.top) / rect.height - 0.5) * 2;

        ctaSection.querySelectorAll('.decorative-element').forEach((el, index) => {
          const intensity = 10 + index * 5;
          const xMove = xPercent * intensity;
          const yMove = yPercent * intensity;
          el.setAttribute('style', `transform: translate(${xMove}px, ${yMove}px)`);
        });
      });
    }

    // Reset button states on page visibility change
    document.addEventListener('visibilitychange', () => {
      if (document.visibilityState === 'visible') {
        document.querySelectorAll('button, a').forEach((btn) => { (btn).style.transform = ''; });
      }
    });
  });
</script>
